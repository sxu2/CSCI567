				    		case 3:
				    			if (car2color==1)
				    				canvas.drawBitmap(purplecar, i4, (float) (2.8*sy/12), null);
				    			else if (car2color==2)
				    				canvas.drawBitmap(greencar, i4, (float) (2.8*sy/12), null);
